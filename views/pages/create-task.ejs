<div class="card" style="max-width:500px;margin:2rem auto;">
  <h2 class="text-center" style="margin-bottom:1rem;">Criar Nova Tasky</h2>
  <form action="/create-task" method="POST">
    <div class="form-group">
      <label class="label" for="title">Título</label>
      <input class="input" type="text" id="title" name="title" required>
    </div>
    <div class="form-group">
      <label class="label" for="description">Descrição</label>
      <textarea class="input" id="description" name="description" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label class="label" for="priority">Prioridade</label>
      <select class="input" id="priority" name="priority">
        <option value="Baixa">Baixa</option>
        <option value="Normal" selected>Normal</option>
        <option value="Alta">Alta</option>
      </select>
    </div>
    <div class="form-group">
      <label class="label" for="due_date">Data de Entrega</label>
      <input class="input" type="date" id="due_date" name="due_date">
    </div>
    <!-- Você pode adicionar mais campos conforme necessário -->
    <button class="button button-primary" type="submit">Criar</button>
    <a href="/" class="button button-outline" style="margin-left:1rem;">Cancelar</a>
  </form>
</div>